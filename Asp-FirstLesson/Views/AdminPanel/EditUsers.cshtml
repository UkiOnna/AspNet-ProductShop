@using Microsoft.AspNet.Identity.EntityFramework;
@using Microsoft.AspNet.Identity;
@using System.Linq;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var i in ViewBag.Users)
{
    <div class="block">

        <span>Логин:</span><span>@i.UserName</span><br />
        <span>Роль:</span>
        @foreach (var role in ViewBag.Roles)
        {
            if ((i.Roles as IEnumerable<IdentityUserRole>).FirstOrDefault().RoleId == role.Id)
            {
                <span>@role.Name</span><br />
            }
        }
        <span>Мэйл:</span><span>@i.Email</span><br />
        <span>Дата рождения:</span><span>@i.BirthDate.ToShortDateString()</span><br />
        <span>Страна:</span><span>@i.Country</span><br />
        <a href="~/AdminPanel/EditUser/@i.Id">Редактировать</a>
    </div>
}

